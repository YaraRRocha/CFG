import random
import requests
def random_pokemon():
    pokemon_number: int = random.randint(1, 151)
    url = 'https://pokeapi.co/api/v2/pokemon/{}/'.format(pokemon_number)
    response = requests.get(url)
    pokemon = response.json()

    return {
    'name': pokemon['name'],
    'id': pokemon['id'],
    'height': pokemon['height'],
    'weight': pokemon['weight'],
}
def run():
    my_pokemon = random_pokemon()
    print('You were given {}. Stats: ID: {}, height: {}, weight: {}'.format(my_pokemon['name'], [my_pokemon['id'], my_pokemon['height'], my_pokemon['weight']))
    stat_choice = input('Which stat do you want to use? (id, height, weight) ')
    opponent_pokemon = random_pokemon()
    print('The opponent chose {}'. Stats: ID: {}, height: {}, weight: {}'.format(opponent_pokemon['name'], opponent_pokemon['id'], opponent_pokemon['height'], opponent_pokemon['weight']))
    my_stat = my_pokemon[stat_choice]
    opponent_stat = opponent_pokemon[stat_choice]

    if my_stat > opponent_stat:
        print('You Win!')
    elif my_stat < opponent_stat:
        print('You Lose!')
    else:
        print('Draw!')

    run()


